@model DeAnNhom.Models.ApplicationUser

<aside class="w-1/6 flex-none flex flex-col items-center gap-5">
    <div id="aside-top" class="flex gap-3 items-center py-3 px-5 w-full bg-white rounded-md shadow-lg">
        <img src="@Url.Content(Model.ProfileImg)"
             height="48" width="48" class="rounded-full border border-gray-400/60" />
        <div class="flex flex-col w-full">
            <span class="font-semibold overflow-hidden text-ellipsis whitespace-nowrap inline-block w-[110px]"> @Model.Customer.Name </span>
            <a href="@Url.Action("Profile")" class="text-gray-400/80 text-sm">
                <i class="fa-solid fa-user-pen"></i> Sửa hồ sơ
            </a>
        </div>
    </div>
    <div class="bg-white shadow-lg rounded-md w-full flex flex-col py-5 px-2">
        <div class="w-full">
            <a href="@Url.Action("Profile")" class="btn btn-outline hover:bg-[#f6412d] hover:text-white hover:border-[#f6412d] w-full flex items-center gap-2">
                <i class="fa-regular fa-user"></i> Hồ sơ
            </a>
        </div>
        <div class="divider"></div>
        <div class="w-full flex flex-col gap-3">
            <a href="@Url.Action("Update", new { name = "Email" })" class="btn btn-outline hover:bg-[#f6412d] hover:text-white hover:border-[#f6412d] w-full flex items-center gap-2">
                <i class="fa-regular fa-envelope"></i> Đổi Email
            </a>
            <a href="@Url.Action("Update", new { name = "Phone" })" class="btn btn-outline hover:bg-[#f6412d] hover:text-white hover:border-[#f6412d] w-full flex items-center gap-2">
                <i class="fa-solid fa-phone"></i> Đổi Số điện thoại
            </a>
            <a href="@Url.Action("Update", new { name = "Password" })" class="btn btn-outline hover:bg-[#f6412d] hover:text-white hover:border-[#f6412d] w-full flex items-center gap-2">
                <i class="fa-solid fa-key"></i> Đổi Mật khẩu
            </a>
        </div>
        <div class="divider"></div>
        <div class="w-full">
            <a href="@Url.Action("Purchase")" class="btn btn-outline hover:bg-[#f6412d] hover:text-white hover:border-[#f6412d] w-full flex items-center gap-2">
                <i class="fa-solid fa-list-check"></i> Đơn hàng
            </a>
        </div>
    </div>
</aside>